{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open Portfolio in Browser",
      "type": "shell",
      "command": "open",
      "args": ["./index.html"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Start Local Server (Python)",
      "type": "shell",
      "command": "python3",
      "args": ["-m", "http.server", "8000", "--directory", "."],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Local Server (Node.js)",
      "type": "shell",
      "command": "npx",
      "args": ["http-server", "-p", "8000"],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
